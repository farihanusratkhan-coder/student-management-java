<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="606.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">

    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Name:" />
        <TextField fx:id="nameField" layoutX="100.0" layoutY="10.0" onAction="#add" prefWidth="200.0" />

        <Label layoutX="14.0" layoutY="44.0" text="ID:" />
        <TextField fx:id="idField" layoutX="100.0" layoutY="40.0" prefWidth="200.0" />

        <Label layoutX="14.0" layoutY="74.0" text="Department:" />
        <TextField fx:id="departmentField" layoutX="100.0" layoutY="70.0" prefWidth="200.0" />

        <Label layoutX="14.0" layoutY="104.0" text="Email:" />
        <TextField fx:id="emailField" layoutX="100.0" layoutY="100.0" prefWidth="200.0" />

        <Label layoutX="14.0" layoutY="134.0" text="CGPA:" />
        <TextField fx:id="cgpaField" layoutX="100.0" layoutY="130.0" prefWidth="200.0" />

        <Button layoutX="14.0" layoutY="170.0" mnemonicParsing="false" onAction="#addStudent" prefHeight="26.0" prefWidth="50.0" text="Add" />
        <Button layoutX="74.0" layoutY="170.0" mnemonicParsing="false" onAction="#updateStudent" text="Update" />
        <Button layoutX="144.0" layoutY="170.0" mnemonicParsing="false" onAction="#deleteStudent" text="Delete" />

        <Label layoutX="400.0" layoutY="14.0" text="Search:" />
        <TextField fx:id="searchField" layoutX="450.0" layoutY="10.0" onKeyReleased="#searchStudent" prefWidth="200.0" />

        <TableView fx:id="studentTable" layoutX="14.0" layoutY="210.0" onMouseClicked="#selectStudent" prefHeight="380.0" prefWidth="722.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="idColumn" prefWidth="120.0" text="ID" />
                <TableColumn fx:id="departmentColumn" prefWidth="150.0" text="Department" />
                <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                <TableColumn fx:id="cgpaColumn" prefWidth="100.0" text="CGPA" />
            </columns>
        </TableView>
      <ButtonBar layoutX="200.0" layoutY="163.0" prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#addStudent1" text="New button" />
        </buttons>
      </ButtonBar>
    </children>
</AnchorPane>
